<Window x:Class="Export_IDs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Export_IDs"
        mc:Ignorable="d"
        Title="Export Elements ID" 
        Height="420" 
        Width="499"
        ResizeMode="NoResize"
        Topmost="True"
        >
    <Grid Margin="0,0,0,-16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320*"/>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="57*"/>

        </Grid.ColumnDefinitions>
        <ListView
			Margin="19,79,48,129"
			FontFamily="Meiryo"
			FontSize="11"
			x:Name="lvElements"
			ItemsSource="{Binding}"  
			SelectedItem="{Binding SelectedItem, Mode=TwoWay}"  
            SelectionMode="Extended"
            PreviewMouseLeftButtonDown="lvElements_PreviewMouseLeftButtonDown"
			>

            <ListView.View>
                <GridView>

                    <GridViewColumn 
                        Header="No" 
                        Width="50">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding gvcNo}"
										   HorizontalAlignment="Center"
										   VerticalAlignment="Center"
										   FontWeight="SemiBold"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>


                    <GridViewColumn 
                        Header="FamilyName" 
                        Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding gvcFamilyName}"
										   VerticalAlignment="Center"
										   TextTrimming="CharacterEllipsis"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn 
                        Header="Select ID" 
                        Width="60">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding gvcSelectID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
										  HorizontalAlignment="Center"
										  VerticalAlignment="Center"
										  Margin="0"
                                          Checked="CheckBox_Checked"        
                                          Unchecked="CheckBox_Unchecked"
                                          MouseLeftButtonDown="CheckBox_MouseDown"
                                          
                                          
                                          />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>


                    <GridViewColumn Header="ID" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding gvcID}"
										   VerticalAlignment="Center"
										   Foreground="DarkBlue"
										   FontWeight="Medium"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>


            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

        <Button 
            Content="Select Excel" 
            HorizontalAlignment="Left" 
            Margin="25,20,0,0" 
            VerticalAlignment="Top" 
            Height="30" 
            Width="90" 
            FontFamily="Meiryo" 
            FontSize="11"
            Background="MediumPurple"
            Foreground="Yellow"
            Click="btnSelectExcel"
            
            />
        <Button 
            Content="Delete" 
            HorizontalAlignment="Left" 
            Margin="380,81,0,0" 
            VerticalAlignment="Top" 
            Width="75" 
            Height="30" 
            FontFamily="Meiryo" 
            FontSize="11"
            Background="MediumPurple"
            Foreground="Yellow" 
            Grid.ColumnSpan="3"
            Click="btnDelete"
            
            />
        <Button 
            Content="Up" 
            HorizontalAlignment="Left" 
            Margin="380,147,0,0" 
            VerticalAlignment="Top" 
            Width="75" 
            Height="30" 
            FontFamily="Meiryo" 
            FontSize="11"
            Background="MediumPurple"
            Foreground="Yellow" 
            Grid.ColumnSpan="3"
            Click="btnUp"
            
            />
        <Button 
            Content="Down" 
            HorizontalAlignment="Left" 
            Margin="380,187,0,0" 
            VerticalAlignment="Top" 
            Width="75" 
            Height="30" 
            FontFamily="Meiryo" 
            FontSize="11"
            Background="MediumPurple"
            Foreground="Yellow" 
            Grid.ColumnSpan="3"
            Click="btnDown"
            
            />
        <Button 
            Content="Clear" 
            HorizontalAlignment="Left" 
            Margin="380,259,0,0" 
            VerticalAlignment="Top" 
            Width="75" 
            Height="30" 
            FontFamily="Meiryo" 
            FontSize="11"
            Background="MediumPurple"
            Foreground="Yellow" Grid.ColumnSpan="3"            
            Click="btnClear"
            
            />
        <Button 
            Content="Pick Elements" 
            HorizontalAlignment="Left" 
            Margin="117,336,0,0" 
            VerticalAlignment="Top" 
            Width="90" 
            Height="30" 
            FontFamily="Meiryo" 
            FontSize="11"
            Background="MediumPurple"
            Foreground="Yellow"
            Click="btnPickElements"
            
            />
        <Button 
            Content="Cancle" 
            HorizontalAlignment="Left" 
            Margin="380,333,0,0" 
            VerticalAlignment="Top" 
            Height="30" 
            Width="75" 
            FontFamily="Meiryo" 
            FontSize="11"
            Background="MediumPurple"
            Foreground="Yellow" 
            Grid.ColumnSpan="3"
            Click="btnCancle"
            
            />

        <Button 
            Content="ExportID" 
            HorizontalAlignment="Left" 
            Margin="271,335,0,0" 
            VerticalAlignment="Top" 
            Height="30" 
            Width="89"
            FontFamily="Meiryo" 
            FontSize="11"
            Background="MediumPurple"
            Foreground="Yellow" 
            Grid.ColumnSpan="3"
            Click ="btnExportID" 
            
            />
        <Label 
            Content="@V2D" 
            HorizontalAlignment="Left" 
            Margin="19,343,0,0" 
            VerticalAlignment="Top" 
            FontFamily="Meiryo" 
            FontSize="8" 
            FontWeight="Thin"

            Foreground="DarkGreen" Height="22" Width="35"            
            />
        <TextBlock 
            HorizontalAlignment="Left" 
            Margin="129,20,0,0" 
            TextWrapping="Wrap" 
            Text="Please select excel file" 
            VerticalAlignment="Top" 
            Height="30" 
            Width="253" 
            FontFamily="Meiryo" 
            FontSize="10"
            TextAlignment="Left" 
            Grid.ColumnSpan="3"
            x:Name= "ExcelPath"
            
            />



    </Grid>
</Window>
